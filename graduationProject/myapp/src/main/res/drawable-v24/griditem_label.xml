<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:top="1dp"
                android:bottom="1dp"
                android:right="1dp"
                android:left="1dp">
                <shape android:shape="oval">
                    <stroke
                        android:width="2dp"
                        android:color="#3669CF"  />
                    <gradient
                        android:startColor="#3669CF"
                        android:endColor="#3669CF" />
                    <corners android:radius="100dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
