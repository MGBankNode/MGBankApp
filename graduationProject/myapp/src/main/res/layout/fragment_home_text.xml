<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeTextFragment"
    android:id="@+id/home_text_layout"
    android:background="#2BB0DD"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.5"
    app:layout_scrollFlags="scroll|enterAlways"
    android:layout_width="match_parent"
    android:layout_height="220dp">
    <TextView android:id="@+id/text1"
        android:text="고객님의 금월 지출은"
        android:fontFamily="@font/applegothicneo_b"
        android:textColor="#fff"
        android:shadowColor="#00709D"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="2.0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/mainFragment_textView"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:text="99999999원"
        android:shadowColor="#FFF"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10.0"
        android:fontFamily="@font/applegothicneo_b"
        android:textSize="35dp"
        android:textColor="#fff"
        android:layout_marginVertical="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView android:text="입니다."
        android:fontFamily="@font/applegothicneo_b"
        android:textColor="#fff"
        android:shadowColor="#00709D"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="2.0"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mainFragment_textView"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:fontFamily="@font/applegothicneo_b"
        android:textColor="#fff"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="25dp"
        android:text="고객님의 소비상태는"
        android:shadowColor="#00709D"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="2.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="45dp"
        android:layout_weight="2"
        android:shadowColor="#00709D"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="2.0"
        android:fontFamily="@font/applegothicneo_b"
        android:gravity="center"
        android:text="아주 좋아요!"
        android:textColor="#FFF"
        android:textSize="17dp" />
</RelativeLayout>
