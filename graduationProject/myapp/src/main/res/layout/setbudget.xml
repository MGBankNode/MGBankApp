<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="280dp"
    android:gravity="center"
    android:background="#FFF"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:fontFamily="@font/applegothicneo_b"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical"
        android:src="@drawable/list_label"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="예산을 설정해주세요"
            android:textSize="20dp"
            android:textColor="#000"
            android:fontFamily="@font/applegothicneo_b"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/setBudgetEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/applegothicneo_b"
                android:textSize="17dp"
                android:hint="000000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:fontFamily="@font/applegothicneo_b"
                android:textSize="17dp"
                android:layout_marginLeft="3dp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/setBudgetOkBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="#2BB0DD"
                android:text="완료"
                android:fontFamily="@font/applegothicneo_b"
                android:textColor="#FFF"
                android:textSize="14dp" />

            <Button
                android:id="@+id/setBudgetCancleBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:fontFamily="@font/applegothicneo_b"
                android:textColor="#FFF"
                android:textSize="14dp"
                android:background="#2BB0DD"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>