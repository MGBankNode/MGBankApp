<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_parent"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AddReceiptActivity"

>
    <LinearLayout

        android:src="@drawable/list_label"
        android:orientation="vertical"
        android:id="@+id/layout_initial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginRight="5pt"
        android:layout_marginTop="5pt"
        android:gravity="right"
    >

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:id="@+id/writeBtn"
            android:src="@drawable/pencil"/>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:id="@+id/cancelBtn"
            android:src="@drawable/cancel"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="8pt">
        <TextView

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="10pt"
            android:fontFamily="@font/applegothicneo_m"
            android:text="영수증을 추가하시겠습니까?">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5pt"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_margin="5dp"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:padding="0dp"
            android:id="@+id/cameraBtn"
            android:background="@android:color/transparent"
            android:src="@drawable/camera"/>
        <ImageButton
            android:layout_margin="5dp"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:padding="0dp"
            android:id="@+id/photoBtn"
            android:background="@android:color/transparent"
            android:src="@drawable/photo"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/layout_result"
        android:layout_width="300dp"
        android:layout_height="350dp">
        <LinearLayout
            android:layout_marginLeft ="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginRight="5pt"
            android:layout_marginTop="5pt"
            android:gravity="left"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="상호명 : "
                    android:fontFamily="@font/applegothicneo_b"
                    android:background="@android:color/transparent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/storeEdit"
                    android:hint="직접 입력해주세요."
                    android:fontFamily="@font/applegothicneo_b"
                    android:background="@android:color/transparent"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft ="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginRight="5pt"
            android:layout_marginTop="5pt"
            android:gravity="left"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="날     짜 : "
                    android:fontFamily="@font/applegothicneo_b"
                    android:background="@android:color/transparent"
                    /></LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateEdit"
                    android:fontFamily="@font/applegothicneo_b"
                    android:hint="직접 입력해주세요."
                    android:background="@android:color/transparent"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft ="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginRight="5pt"
            android:layout_marginTop="5pt"
            android:gravity="left"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="금    액 : "
                    android:fontFamily="@font/applegothicneo_b"
                    android:background="@android:color/transparent"
                    /></LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:hint="직접 입력해주세요."
                    android:fontFamily="@font/applegothicneo_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/moneyEdit"
                    android:background="@android:color/transparent"
                    /></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft ="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginRight="5pt"
            android:layout_marginTop="5pt"
            android:gravity="left"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리 : "
                android:fontFamily="@font/applegothicneo_b"
                android:background="@android:color/transparent"
                />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginRight="20pt"
                android:id="@+id/change_button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/correct_button_bg"
                android:fontFamily="@font/applegothicneo_b"
                android:gravity="center"
                android:text="추가"
                android:textColor="#444"
                android:textSize="21dp" />
            <TextView
                android:layout_marginRight="20pt"
                android:id="@+id/cancel_button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/cancel_button_bg"
                android:fontFamily="@font/applegothicneo_b"
                android:gravity="center"
                android:text="취소"
                android:textColor="#444"
                android:textSize="21dp" />
        </LinearLayout>
</LinearLayout>
</LinearLayout>

