<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="#2BB0DD"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="10dp"
    android:paddingBottom="14dp"
    android:gravity="center"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Node Bank"
        android:textSize="30dp"
        android:textColor="#FFF"
        android:gravity="center"
        android:textFontWeight="400"
        android:fontFamily="@font/bmdohyeon"/>

<LinearLayout
    android:id="@+id/signup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:layout_marginTop="30dp"
    android:background="@drawable/loginbtn"
    android:gravity="center"
    android:onClick="onMenuBtnClicked">

    <!-- width : height = 5 : 4-->
   <ImageView
       android:layout_width="37.5dp"
       android:layout_height="30dp"
       android:src="@drawable/character1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="#FFF"
        android:textSize="13dp"
        android:paddingLeft="4dp"
        android:fontFamily="@font/consola"
        />


</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="28dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:background="@drawable/menuimage"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menuBtn1"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:src="@drawable/notebook"
                android:onClick="onMenuBtnClicked"
                />

            <ImageView
                android:id="@+id/menuBtn2"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:src="@drawable/analysis"
                android:onClick="onMenuBtnClicked"
                />

            <ImageView
                android:id="@+id/menuBtn3"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:src="@drawable/barcode"
                android:onClick="onMenuBtnClicked"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="6dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="가계부"
                android:textColor="#E6000000"
                android:textSize="12dp"
                android:fontFamily="@font/malgun"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="소비평가"
                android:textColor="#E6000000"
                android:textSize="12dp"
                android:fontFamily="@font/malgun"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="맴버십"
                android:textColor="#E6000000"
                android:textSize="12dp"
                android:fontFamily="@font/malgun"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
