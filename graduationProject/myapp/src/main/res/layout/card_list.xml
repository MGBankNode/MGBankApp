<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="#000"
    android:dividerPadding="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_ic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
           >

            <TextView
                android:id="@+id/card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="카드이름"
                android:textSize="15dp"
                android:fontFamily="@font/consolab"/>

            <TextView
                android:id="@+id/card_merit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="카드내용"
                android:textSize="11dp"
                android:lineSpacingExtra="5dp"
                android:fontFamily="@font/consola"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:id="@+id/discountTextView"
                    android:fontFamily="@font/applegothicneo_b"
                    android:text="999999"
                    android:gravity="right"
                    android:textColor="#2BB0DD"
                    android:textSize="25dp"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="원 절약"
                    android:fontFamily="@font/applegothicneo_b"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
