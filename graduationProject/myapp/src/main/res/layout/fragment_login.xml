<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:id="@+id/loginFrag"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bmdohyeon"
            android:gravity="center"
            android:text="Node Bank"
            android:textColor="#2BB0DD"
            android:textFontWeight="400"
            android:textSize="33dp" />


        <EditText
            android:id="@+id/etLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/signupedit"
            android:padding="12dp"
            android:textSize="13dp"
            android:hint="아이디"
            android:inputType="text"/>


        <EditText
            android:id="@+id/etLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/signupedit"
            android:padding="12dp"
            android:textSize="13dp"
            android:hint="비밀번호"
            android:inputType="textPassword"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/logInConfirmBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:padding="8dp"
            android:background="#2BB0DD"
            android:fontFamily="@font/consola"
            android:onClick="onConfirmBtnClicked"
            android:text="로그인"
            android:textColor="#FFF"
            android:textSize="18dp" />


        <Button
            android:id="@+id/logInCancleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center|bottom"
            android:padding="8dp"
            android:background="#2BB0DD"
            android:fontFamily="@font/consola"
            android:onClick="onConfirmBtnClicked"
            android:text="취소"
            android:textColor="#FFF"
            android:textSize="18dp" />
    </LinearLayout>
    </LinearLayout>
</ScrollView>
