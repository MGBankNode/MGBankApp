<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listViewItem"
    android:layout_width="match_parent"
    android:layout_height="45.3dp"
    android:background="#FFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/listview_label"
            android:gravity="center"
            android:text="XXXX-YY-ZZ"
            android:fontFamily="@font/applegothicneo_m"
            android:textColor="#000"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/accountText"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="3"
            android:fontFamily="@font/applegothicneo_m"
            android:gravity="center"
            android:shadowColor="#484848"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="2.0"
            android:text="지지고광운대점"
            android:textColor="#000"
            android:textSize="15dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/origin_money_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:fontFamily="@font/applegothicneo_m"
                android:gravity="center"
                android:shadowColor="#484848"
                android:shadowDx="2.0"
                android:shadowDy="2.0"
                android:shadowRadius="2.0"
                android:text="999999원"
                android:textColor="#000"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/discounted_money_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:fontFamily="@font/applegothicneo_m"
                android:gravity="center"
                android:shadowColor="#484848"
                android:shadowDx="2.0"
                android:shadowDy="2.0"
                android:shadowRadius="2.0"
                android:text=""
                android:textColor="#000"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginHorizontal="16dp"
        android:background="#989898" />
</LinearLayout>

