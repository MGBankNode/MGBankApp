<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reportContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingBottom="8dp"
    android:paddingLeft="20dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/reportDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[3월 3주차]"
        android:textSize="17dp"
        android:textColor="#000"
        android:fontFamily="@font/consolab"
        />

    <TextView
        android:id="@+id/reportExpenditure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="6dp"
        android:text="3123123원"
        android:textSize="14dp"
        android:textColor="#000000"
        android:fontFamily="@font/malgun"/>

    <Button
        android:id="@+id/detailBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="4dp"
        android:background="#00FFFFFF"
        android:text="자세히"
        android:textSize="10dp"
        android:textColor="#A9A9A9"
        android:drawablePadding="-30dp"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:onClick="onDetailBtnClicked"/>
</LinearLayout>