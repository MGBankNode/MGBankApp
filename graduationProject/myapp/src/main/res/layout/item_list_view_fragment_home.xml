<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listViewItem"
    android:layout_width="match_parent"
    android:layout_height="45.3dp"
    android:background="#FFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_number"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/listview_label"
            android:fontFamily="@font/applegothicneo_b"
            android:gravity="center"
            android:text="1"
            android:textColor="#000"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stat_textView"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="3"
            android:fontFamily="@font/applegothicneo_b"
            android:gravity="center"
            android:text="통계"
            android:textColor="#000"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/percent_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="20dp"
                android:layout_marginRight="5dp"
                android:layout_weight="10"
                android:background="@drawable/percent_bar_style3" />

            <TextView
                android:id="@+id/percent_text"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/applegothicneo_b"
                android:gravity="center_vertical"
                android:text="100%"
                android:textColor="#000" />

            <TextView
                android:id="@+id/percent_reverse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/applegothicneo_b"
                android:layout_weight="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="3"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/money_textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/applegothicneo_b"
                android:gravity="center_vertical"
                android:text="999999원"
                android:textColor="#000"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginHorizontal="16dp"
        android:background="#989898" />
</LinearLayout>

