<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="14dp"
    android:paddingLeft="14dp"
    android:paddingTop="22dp"
    android:paddingBottom="22dp"
    android:orientation="horizontal">


        <TextView
            android:id="@+id/cardDetailListCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/applegothicneo_m"
            android:text="1"
            android:textColor="#000"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/cardDetailListDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="사용금액"
            android:textColor="#000"
            android:fontFamily="@font/applegothicneo_m"
            android:textSize="16dp"

            />

        <TextView
            android:id="@+id/cardDetailListPlace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_below="@id/cardListUseMoney"
            android:text="testTest"
            android:textSize="16dp"
            android:textColor="#000"
            android:fontFamily="@font/applegothicneo_b"

            />

        <TextView
            android:id="@+id/cardDetailListValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_below="@id/cardListUseMoney"
            android:text="testTest"
            android:textColor="#000"
            android:fontFamily="@font/applegothicneo_m"
            android:textSize="16dp"

            />


</LinearLayout>